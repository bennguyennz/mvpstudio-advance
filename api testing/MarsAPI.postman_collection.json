				{
					"name": "Get Language",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"//On each iterration, push language into an array of expected languages\r",
									"var runTest = \"iteration\";\r",
									"var lang = \"\"\r",
									"if(runTest== \"iteration\")\r",
									"{\r",
									"    lang = pm.iterationData.get(\"NewLanguage\");\r",
									"}\r",
									"else\r",
									"{\r",
									"    lang = pm.collectionVariables.get(\"NewLanguage\");\r",
									"}\r",
									"var arrayLang = pm.collectionVariables.get(\"expLang\");\r",
									"arrayLang.push(lang);\r",
									"pm.collectionVariables.set(\"expLang\", arrayLang);\r",
									"var expLanguage = pm.collectionVariables.get(\"expLang\");\r",
									"console.log(\"Expected languages\");\r",
									"console.log(expLanguage);\r",
									"\r",
									"//Same with actual languages\r",
									"const jsonObject = pm.response.json();\r",
									"var actLanguage=pm.collectionVariables.get(\"actLang\");\r",
									"\r",
									"jsonObject.map(jsonObject => actLanguage.push(jsonObject.language));\r",
									"pm.collectionVariables.set(\"actLang\", actLanguage);\r",
									"var actLanguage=pm.collectionVariables.get(\"actLang\");\r",
									"console.log(\"Actual languages\");\r",
									"console.log(actLanguage);\r",
									"\r",
									"//validation\r",
									"pm.test(\"Languages check\", function()\r",
									"{\r",
									"pm.expect(expLanguage).to.be.eql(actLanguage);\r",
									"});\r",
									"\r",
									"pm.test(\"Status code check\", function()\r",
									"{\r",
									"    pm.response.to.have.status(200);\r",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"if(pm.collectionVariables.get(\"expLang\")==\"\"||pm.collectionVariables.get(\"expLang\")== \"German,French,Italian,Japanese\")\r",
									"{   \r",
									"    pm.collectionVariables.set(\"expLang\", []);\r",
									"}\r",
									"\r",
									"if(pm.collectionVariables.get(\"actLang\")==\"\"||pm.collectionVariables.get(\"actLang\")== \"German,French,Italian,Japanese\")\r",
									"{   \r",
									"    pm.collectionVariables.set(\"actLang\", []);\r",
									"}"
								],
								"type": "text/javascript"
							}
						}
